    <script language="JavaScript">
        
        function validateForm () {
            
            var login_name      = document.loginForm.email.value;
            var login_password  = document.loginForm.password.value;
            
            if (login_name=="" || login_password=="") {
                
                alert ("Please enter user id (email) & password.");
            
            } else {
                document.loginForm.submit ();
            }
            
        }
    
    
    </script>
    
    <%
    	String strErrorCode = (String) request.getParameter ("error");
            
         if (strErrorCode!=null) {
         
            if ("1".equals(strErrorCode)) {
                %>
                <script language="JavaScript">
                        alert ("Please enter a valid user id (email) !");
                 </script>
                <%                
            } else if ("2".equals(strErrorCode)) {
                %>
                <script language="JavaScript">
                        alert ("Please enter a valid password !");
                 </script>
                <% 
            } else if ("3".equals(strErrorCode)) {
                %>
                <script language="JavaScript">
                        alert ("Session expired. Please re-login !");
                 </script>
                <% 
            }


        }
    %>
    
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" name="loginForm" method="post" action="login/slmLoginValidation.jsp">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <a href="javascript:validateForm()" class="btn btn-lg btn-success btn-block">Login</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

